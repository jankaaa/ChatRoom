<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="http://code.jquery.com/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Helpers.js"></script>




</head>
<body>

    <table id="ContentTable" class="tableMainBorder FriendlyBackground">
        @* Header*@
        <tr >
            <td>
                <img src="~/Content/Image/asp-net-signalr-chat-place.png" />
            </td>
            <td Id="login" style="text-align:right;">
                @Html.Action("Index", "Account")
            </td>
        </tr>
        <tr >
            <td colspan="2" class="tableBorders">Navigation
            </td>
        </tr>
        @* Body*@
        <tr >
            <td colspan="2">
                @RenderBody()
            </td>
        </tr>
        @* Footer*@
        <tr class="footer">
            <td colspan="2"></td>
        </tr>


    </table>




    @RenderSection("scripts", required: false)
</body>
</html>
